@model IEnumerable<QLThuocDAPM.Data.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card h-100">
                    <div id="demo@item.MaSp" class="carousel slide" data-ride="carousel">
                        <!-- Carousel Indicators and Slides -->
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="card-img-top" src="~/UploadFile/@item.HinhAnh1" alt="@item.TenSp">
                            </div>
                            <div class="carousel-item">
                                <img class="card-img-top" src="~/UploadFile/@item.HinhAnh2" alt="@item.TenSp">
                            </div>
                            <div class="carousel-item">
                                <img class="card-img-top" src="~/UploadFile/@item.HinhAnh3" alt="@item.TenSp">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#demo@item.MaSp" data-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </a>
                        <a class="carousel-control-next" href="#demo@item.MaSp" data-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </a>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("CusChiTietSanPham", "SanPhams", new { id = item.MaSp })">@item.TenSp</a>
                        </h5>
                        <h6>@item.GiaTien.000 VNĐ</h6>
                        <p class="card-text">@item.ChitietSp</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
