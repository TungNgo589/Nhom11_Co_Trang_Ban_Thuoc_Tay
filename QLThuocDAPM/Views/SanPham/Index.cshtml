@model IEnumerable<QLThuocDAPM.Data.SanPham>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="~/css/listSanPham.css" />
    <title>Danh sách sản phẩm</title>
    <!-- Thêm CSS Slick -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" />

    <!-- Thêm jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Thêm JS Slick -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

    <style>
     

    </style>
</head>
<body >
    <div style="justify-content:center;margin:auto ;width:1100px">
        <h2 class="title">TẤT CẢ SẢN PHẨM</h2>


        <div  class="product-container" style="display:flex">
            @foreach (var item in Model.Take(6))
            {
                <a asp-controller="SanPham" asp-action="ChiTietSanPham" asp-route-id="@item.MaSp">
                    <div class="product-card" style="padding-left:10px">
                        <div class="discount-badge">@item.MaGiamGiaNavigation.GiaTri %</div>
                        <img src="@Url.Content(item.HinhAnh1)" alt="Product Image" class="product-image">
                        <div class="product-name">@item.TenSp</div>
                        <div class="product-description">@item.Doituongsudung</div>
                        <div class="price">@item.GiaSauGiam / @item.DonVi</div>
                        <div class="old-price">@item.GiaTien.000đ</div>
                        <div class="package-info">@item.DonVi</div>
                        <button class="buy-button">Chọn mua</button>
                    </div>
                </a>
                
            }
        </div>







        @* /////////////////////// *@
        <br style="margin-top:100px;" />

        <div>
            <h2 style="text-align:center;justify-items:center">Sản Phẩm Bán Chạy</h2>

            <div class="row" >
                @foreach (var item in Model.OrderByDescending(sp => sp.SoLuongMua).Take(3))
                {
                    <div class="col-3 mt-2 card-product" style="border: 1px solid #ccc; padding: 10px; border-radius: 5px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease;">
                        <a href="/SanPham/ChiTietSanPham/@item.MaSp">
                            <img class="img-product" src="@Url.Content(item.HinhAnh1)" alt="@item.TenSp" style="width: 100%; height: auto;">
                            <div class="name-product" style="font-weight: bold; font-size: 16px; margin-top: 10px;">
                                @item.TenSp
                            </div>
                            <div class="price-product" style="color: #e74c3c; font-size: 14px; margin-top: 5px;">
                                Giá: @String.Format("{0:0,0}", item.GiaTien) VNĐ
                            </div>
                            <div class="purchase-count" style="color: #2ecc71; font-size: 13px; margin-top: 5px;">
                                Lượt Mua: @item.SoLuongMua
                            </div>
                        </a>
                    </div>
                }
            </div>


        </div>
    </div>
   <br style="margin-top:100px;" />
</body>

</html>
<style>
    <style >


    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    body {
        display: flex;
        justify-content: center;
        align-items:;
        height: 100vh;
        background-color: #f4f4f4;
    }

    .product-card {
        width: 250px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        padding: 15px;
        position: relative;
        text-align: left;
    }

    .discount-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: red;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
    }

    .product-image {
        max-width: 100%;
        margin-bottom: 15px;
        border-radius: 10px;
    }

    .product-name {
        font-size: 16px;
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
    }

    .product-description {
        font-size: 14px;
        color: #666;
        margin-bottom: 10px;
    }

    .price {
        font-size: 18px;
        color: #007bff;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .old-price {
        font-size: 14px;
        color: #999;
        text-decoration: line-through;
        margin-bottom: 10px;
    }

    .package-info {
        display: inline-block;
        padding: 5px 10px;
        background-color: #f1f1f1;
        color: #666;
        font-size: 14px;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .buy-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        font-size: 16px;
        cursor: pointer;
        width: 100%;
        transition: background-color 0.3s;
    }

        .buy-button:hover {
            background-color: #0056b3;
        }
</style>
</html>




