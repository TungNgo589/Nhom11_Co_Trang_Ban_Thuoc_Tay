@model List<CartItem>
<style>
    .form-group
    {
        width:380px;
        height:56px;
    }

    .form-group {
        width: 600px;
        height: 56px;
    }
</style>

<body>
    <div style=" justify-content:center;margin:auto">
        <h2>Thanh Toán</h2>
        <div style="display:flex;">
            <div>
                <table class="">

                    <tr>
                        <th style="background-color:#1250DC">
                            Hình ảnh
                        </th>
                        <th style="background-color:#1250DC">
                            Tên sản phẩm
                        </th>
                        <th style="background-color:#1250DC">

                            Số lượng</th>
                        <th style="background-color:#1250DC">

                            Đơn giá</th>
                        <th style="background-color:#1250DC">

                            Tổng tiền</th>
                    </tr>


                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>   <img width="48" height="48" class="anhsanpham" src="@Url.Content(item.Hinh)"></td>

                            <td style="font-family:Arial;font-size:14px">@item.TenHH</td>
                            <td> x @item.SoLuong</td>
                            <td style="font-family:Arial;font-size:14px;font-weight:400">@item.DonGia.000vnđ</td>

                            <td style="font-family:Arial;font-size:14px;font-weight:400">
                                
                                @item.TongTien.000vnđ
                            </td>
                        </tr>
                    }

                </table>

                <h4>Thông tin người đặt</h4>
                <form asp-action="Index" method="post">
                    <div style="display:flex">
                        <div class="form-group">
                            <label for="address">Tên:</label>
                            <input style="width:380px;height:40px;border-radius:9px;" type="text" name="tennguoinhan" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="address">Sdt</label>
                            <input style ="width:380px;height:40px;border-radius:9px;" type="text" name="sdtnguoinhan" class="form-control" required />
                        </div>
                    </div>
                   
                    <div class="form-group1">
                        <label for="address">Địa chỉ:</label>
                        <input type="text" name="address" class="form-control" required />
                    </div>

                    <button asp-action="LuuDonHang" asp-controller="GioHang" type="submit" class="btn btn-primary">Thanh toán</button>

                </form>
        
            </div>
       
        <div>
        
            <form asp-action="ApDungMaGiamGia" asp-controller="GioHang" method="post" class="form-inline">
                <div class="form-group">
                    <input type="text" name="maKhuyenMai" class="form-control" placeholder="Nhập mã giảm giá" />
                </div>
                <button type="submit" class="btn btn-success">Áp dụng</button>
            </form>
                <h4>Giá trị đơn hàng: @ViewData["TotalAmount"] 000vnđ</h4>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại giỏ hàng</a>
                </div>
        </div>

      
     
        </div>
      
   
        <div>
            @if (ViewData["DiscountMessage"] != null)
            {
                <div class="alert alert-info">
                    @ViewData["DiscountMessage"]
                </div>
            }
     
        </div>
      

    </div>
</body>
