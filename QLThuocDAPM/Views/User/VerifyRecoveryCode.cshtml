@model QLThuocDAPM.Data.NguoiDung
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("VerifyRecoveryCode", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Xác nhận mã khôi phục</div>
                </div>

                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <span class="badge text-left badge-danger">@ViewBag.Error</span>
                    }

                    <div class="form-group">
                        @Html.Label("Mã khôi phục")
                        @Html.TextBox("recoveryCode", null, new { @class = "form-control", @placeholder = "Nhập mã khôi phục", required = "required" })
                        @Html.ValidationMessage("recoveryCode", "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Xác nhận</button>
                    </div>

                    <p>
                        @Html.ActionLink("Quay lại đăng nhập", "Login", "User", null, new { @class = "btn btn-link" })
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}