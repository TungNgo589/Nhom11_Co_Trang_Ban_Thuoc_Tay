@model QLThuocDAPM.Data.NguoiDung

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="forgot-password-title">Quên Mật Khẩu</h2>

<div class="forgot-password-container">
    <form method="post" asp-action="ForgotPassword" asp-controller="User">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" required placeholder="Nhập địa chỉ email của bạn" />
        </div>

        <button type="submit" class="btn btn-primary forgot-password-btn">Gửi mã khôi phục</button>

        @if (ViewBag.Error != null)
        {
            <p class="error-message">@ViewBag.Error</p>
        }
        @if (ViewBag.Message != null)
        {
            <p class="success-message">@ViewBag.Message</p>
        }
    </form>
</div>

<style>
    /* Định dạng tiêu đề */
    .forgot-password-title {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    /* Khung chứa form */
    .forgot-password-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Định dạng nhóm form */
    .form-group label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        font-size: 16px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        box-sizing: border-box;
        transition: border-color 0.2s ease;
    }

        .form-control:focus {
            border-color: #80bdff;
            outline: none;
            box-shadow: 0 0 5px rgba(128, 189, 255, 0.5);
        }

    /* Nút gửi */
    .forgot-password-btn {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: #fff;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 15px;
    }

        .forgot-password-btn:hover {
            background-color: #0056b3;
        }

    /* Thông báo lỗi và thành công */
    .error-message {
        color: #d9534f;
        font-weight: bold;
        margin-top: 15px;
        text-align: center;
    }

    .success-message {
        color: #5cb85c;
        font-weight: bold;
        margin-top: 15px;
        text-align: center;
    }
</style>
