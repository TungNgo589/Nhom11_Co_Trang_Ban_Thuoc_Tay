@model QLThuocDAPM.Data.NguoiDung
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quên Mật Khẩu</h2>

<form method="post" asp-action="ForgotPassword" asp-controller="User">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" name="email" class="form-control" required placeholder="Nhập địa chỉ email của bạn" />
    </div>

    <button type="submit" class="btn btn-primary">Gửi mã khôi phục</button>

    @if (ViewBag.Error != null)
    {
        <p style="color:red;">@ViewBag.Error</p>
    }
    @if (ViewBag.Message != null)
    {
        <p style="color:green;">@ViewBag.Message</p>
    }
</form>