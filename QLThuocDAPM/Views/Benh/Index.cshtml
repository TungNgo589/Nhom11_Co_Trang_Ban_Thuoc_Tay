@model IEnumerable<QLThuocDAPM.Data.Benh>

<h2 style="text-align:center">Tìm hiểu về Bệnh</h2>

<div class="container">
    <div class="row">
        <!-- Bên trái: Hình ảnh cơ thể người -->
        <div style="margin-bottom: 50px" class="col-md-6">
            <img src="~/img/cothenguoi.jpg" alt="Cơ thể con người" class="img-fluid" style="object-fit: cover; width: 100%; height: auto;">
        </div>

        <!-- Bên phải: Danh sách bệnh chia thành 2 cột -->
        <div class="col-md-6">
            <div class="row">
                <!-- Cột đầu tiên -->
                <div class="col-md-6">
                    <div class="list-group">
                        @for (int i = 0; i < Math.Min(5, Model.Count()); i++) // Hiển thị tối đa 5 bệnh
                        {
                            var item = Model.ElementAt(i);
                            <div class="list-group-item">
                                <h5 class="list-group-item-heading">
                                    <a asp-action="Details" asp-controller="Benh" asp-route-id="@item.MaBenh">@item.TenBenh</a>

                                </h5>
                            </div>
                        }
                    </div>
                </div>

                <!-- Cột thứ hai -->
                <div class="col-md-6">
                    <div class="list-group">
                        @for (int i = 5; i < Model.Count(); i++) // Hiển thị tất cả các bệnh còn lại
                        {
                            var item = Model.ElementAt(i);
                            <div class="list-group-item">
                                <h5 class="list-group-item-heading">
                                    <a asp-action="Details" asp-controller="Benh" asp-route-id="@item.MaBenh">@item.TenBenh</a>
                                </h5>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>
    /* Đảm bảo hình ảnh không bị bể */
    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .list-group-item {
        display: flex;
        justify-content: space-between; /* Căn chỉnh nội dung bên trong */
        align-items: center; /* Căn giữa theo chiều dọc */
    }

    .list-group-item-heading a {
        text-decoration: none; /* Bỏ gạch chân của link */
        color: black; /* Chuyển màu chữ thành màu đen */
    }

    .list-group-item-heading a:hover {
        text-decoration: underline; /* Thêm gạch chân khi hover */
        color: #28a745; /* Màu xanh khi hover */
    }
</style>