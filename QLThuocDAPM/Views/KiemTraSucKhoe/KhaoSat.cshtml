@{
    ViewData["Title"] = "Khảo sát sức khỏe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-bottom:30px" class="survey-container">
    <h2 class="survey-title">Khảo sát sức khỏe: @ViewBag.LoaiBenh</h2>
    <p class="survey-intro">Vui lòng trả lời các câu hỏi dưới đây.</p>

    <form method="post" asp-action="KetQuaKhaoSat" asp-controller="KiemTraSucKhoe" class="survey-form">
        @if (ViewBag.SurveyQuestions != null)
        {
            foreach (var question in ViewBag.SurveyQuestions)
            {
                <div class="question">
                    <p>Câu hỏi @question.Id: @question.QuestionText</p>
                    <label>
                        <input type="checkbox" name="answers[q@question.Id]" value="Có"> Có
                    </label>
                    <label>
                        <input type="checkbox" name="answers[q@question.Id]" value="Không"> Không
                    </label>
                    <label>
                        <input type="checkbox" name="answers[q@question.Id]" value="Thỉnh thoảng"> Thỉnh thoảng
                    </label>
                </div>
            }
        }
        else
        {
            <p>Không có câu hỏi nào được tìm thấy cho loại bệnh này.</p>
        }

        <button type="submit" class="btn-submit">Hoàn thành</button>
    </form>
</div>

<!-- CSS -->
<style>
    .survey-container {
        text-align: center;
        background-color: #e0f7fa;
        padding: 40px;
        border-radius: 10px;
        max-width: 800px;
        margin: 0 auto;
    }

    .survey-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .question {
        width: 100%;
        max-width: 600px;
        text-align: left;
        margin-bottom: 20px;
    }

    .btn-submit {
        padding: 12px 25px;
        background-color: #0277bd;
        color: white;
        border-radius: 6px;
        font-size: 16px;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #01579b;
        }
</style>
