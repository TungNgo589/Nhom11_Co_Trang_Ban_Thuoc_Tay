@{
    ViewData["Title"] = "Kiểm tra sức khỏe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-bottom:35px" class="health-check-container">
    <h2>Kiểm tra sức khỏe</h2>
    <p>Kết quả đánh giá sẽ cho bạn lời khuyên xử trí phù hợp!</p>

    <div class="health-check-options">
        <div class="option-card">
            <img src="~/img/tim.jpg" alt="Bệnh tim mạch">
            <h3>Kiểm tra nguy cơ mắc bệnh tim mạch</h3>
            <a asp-controller="KiemTraSucKhoe" asp-action="KhaoSat" asp-route-loaiBenh="Tim mach" class="btn-start">Bắt đầu</a>
          
        </div>
        <div class="option-card">
            <img src="~/img/Alzheimer.jpg" alt="Alzheimer">
            <h3>Kiểm tra nguy cơ mắc bệnh Alzheimer</h3>
            <a asp-controller="KiemTraSucKhoe" asp-action="KhaoSat" asp-route-loaiBenh="Alzheimer" class="btn-start">Bắt đầu</a>
        </div>
        <div class="option-card">
            <img src="~/img/haduonghuyet.jpg" alt="Hạ đường huyết">
            <h3>Kiểm tra nguy cơ mắc bệnh hạ đường huyết</h3>
            <a asp-controller="KiemTraSucKhoe" asp-action="KhaoSat" asp-route-loaiBenh="Ha duong huyet" class="btn-start">Bắt đầu</a>
        </div>
    </div>
</div>

<!-- CSS -->
<style>
    .health-check-container {
        text-align: center;
        background-color: #e0f7fa;
        padding: 40px;
        border-radius: 10px;
        max-width: 800px;
        margin: 0 auto;
    }

    .health-check-options {
        display: flex;
        justify-content: space-between;
    }

    .option-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        width: 30%;
        padding: 20px;
        text-align: center;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .option-card img {
        width: 50px;
        height: 50px;
        margin-bottom: 15px;
    }

    .btn-start {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 20px;
        background-color: #0277bd;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

    .btn-start:hover {
        background-color: #01579b;
    }
</style>
