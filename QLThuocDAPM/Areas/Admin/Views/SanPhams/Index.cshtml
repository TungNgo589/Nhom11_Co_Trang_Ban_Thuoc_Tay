 @model IEnumerable<QLThuocDAPM.Data.SanPham>

@{
    Layout = "~/Areas/Admin/Views/shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh Sách Sản Phẩm</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

            .table th, .table td {
                padding: 12px;
                text-align: left;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #007bff;
                color: white;
            }

            .table tr:hover {
                background-color: #f1f1f1;
            }

        .image-thumbnail {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }

        .btn {
            padding: 6px 12px;
            margin: 2px;
            border: none;
            border-radius: 4px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .action-buttons {
            display: flex;
            gap: 5px;
        }
    </style>
</head>
<body>
    <h1>Danh Sách Sản Phẩm</h1>
    <p>
        <a class="btn" asp-action="Create">Tạo Mới</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().TenSp)</th>
                <th>@Html.DisplayNameFor(model => model.First().ThanhPhan)</th>
                <th>@Html.DisplayNameFor(model => model.First().GiaTien)</th>
                <th>@Html.DisplayNameFor(model => model.First().DonVi)</th>
                <th>@Html.DisplayNameFor(model => model.First().HansuDung)</th>
                <th>@Html.DisplayNameFor(model => model.First().ChitietSp)</th>
                <th>@Html.DisplayNameFor(model => model.First().SoLuong)</th>
                <th>@Html.DisplayNameFor(model => model.First().SoLuongMua)</th>
                <th>@Html.DisplayNameFor(model => model.First().HinhAnh1)</th>
                <th>@Html.DisplayNameFor(model => model.First().HinhAnh2)</th>
                <th>@Html.DisplayNameFor(model => model.First().HinhAnh3)</th>
                <th>@Html.DisplayNameFor(model => model.First().HinhAnh4)</th>
                <th>@Html.DisplayNameFor(model => model.First().MaBenhNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.First().MaDmNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.First().MaGiamGiaNavigation)</th>
                <th>@Html.DisplayNameFor(model => model.First().MaNhaCungCapNavigation)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenSp)</td>
                    <td>@Html.DisplayFor(modelItem => item.ThanhPhan)</td>
                    <td>@Html.DisplayFor(modelItem => item.GiaTien)</td>
                    <td>@Html.DisplayFor(modelItem => item.DonVi)</td>
                    <td>@Html.DisplayFor(modelItem => item.HansuDung)</td>
                    <td>@Html.DisplayFor(modelItem => item.ChitietSp)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoLuongMua)</td>
                    <td><img src="@Url.Content(item.HinhAnh1)" alt="Hình 1" class="image-thumbnail" /></td>
                    <td><img src="@Url.Content(item.HinhAnh2)" alt="Hình 2" class="image-thumbnail" /></td>
                    <td><img src="@Url.Content(item.HinhAnh3)" alt="Hình 3" class="image-thumbnail" /></td>
                    <td><img src="@Url.Content(item.HinhAnh4)" alt="Hình 4" class="image-thumbnail" /></td>
                    <td>@Html.DisplayFor(modelItem => item.MaBenhNavigation.MaBenh)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaDmNavigation.MaDm)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaGiamGiaNavigation.MaGiamGia)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaNhaCungCapNavigation.MaNhaCungCap)</td>
                    <td>
                        <div class="action-buttons">
                            <a class="btn" asp-action="Edit" asp-route-id="@item.MaSp">Sửa</a>
                            <a class="btn" asp-action="Details" asp-route-id="@item.MaSp">Chi Tiết</a>
                            <a class="btn" asp-action="Delete" asp-route-id="@item.MaSp">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
