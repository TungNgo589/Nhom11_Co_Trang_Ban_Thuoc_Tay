 @model QLThuocDAPM.Data.SanPham

@{
    Layout = "~/Areas/Admin/Views/shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif; /* Use a clean, modern font */
            background-color: #f8f9fa; /* Light background color for contrast */
        }

        h4 {
            text-align: center; /* Center the heading */
            margin-top: 20px; /* Add space above the heading */
            color: #333; /* Dark color for text */
        }

        .form-container {
            background-color: #fff; /* White background for the form */
            padding: 30px; /* Space inside the form */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
            margin: 20px auto; /* Center the form */
            max-width: 600px; /* Limit form width */
        }

        .form-group {
            margin-bottom: 20px; /* Space between form groups */
        }

        .form-control {
            border-radius: 5px; /* Rounded edges for inputs */
            border: 1px solid #ced4da; /* Light border color */
            transition: border-color 0.3s; /* Smooth transition for focus effect */
        }

            .form-control:focus {
                border-color: #007bff; /* Change border color on focus */
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Add shadow on focus */
            }

        .btn-primary {
            background-color: #007bff; /* Primary button color */
            border: none; /* No border */
            border-radius: 5px; /* Rounded corners for button */
            padding: 10px 20px; /* Padding for button */
            transition: background-color 0.3s; /* Smooth transition */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker button color on hover */
            }

        .text-danger {
            font-size: 0.9rem; /* Smaller font size for validation errors */
        }

        .back-link {
            display: block; /* Make the link a block for better spacing */
            text-align: center; /* Center the back link */
            margin-top: 20px; /* Space above the back link */
            color: #007bff; /* Link color */
            text-decoration: none; /* Remove underline */
        }

            .back-link:hover {
                text-decoration: underline; /* Underline on hover */
            }
    </style>
</head>
<body>

    <div class="form-container">
        <h4>Thêm Sản Phẩm</h4>
        <hr />
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenSp" class="control-label"></label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaBenh" class="control-label"></label>
                <select asp-for="MaBenh" class="form-control" asp-items="ViewBag.MaBenh"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaNhaCungCap" class="control-label"></label>
                <select asp-for="MaNhaCungCap" class="form-control" asp-items="ViewBag.MaNhaCungCap"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaGiamGia" class="control-label"></label>
                <select asp-for="MaGiamGia" class="form-control" asp-items="ViewBag.MaGiamGia"></select>
            </div>
            <div class="form-group">
                <label asp-for="ThanhPhan" class="control-label"></label>
                <input asp-for="ThanhPhan" class="form-control" />
                <span asp-validation-for="ThanhPhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaTien" class="control-label"></label>
                <input asp-for="GiaTien" class="form-control" />
                <span asp-validation-for="GiaTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonVi" class="control-label"></label>
                <input asp-for="DonVi" class="form-control" />
                <span asp-validation-for="DonVi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HansuDung" class="control-label"></label>
                <input asp-for="HansuDung" class="form-control" />
                <span asp-validation-for="HansuDung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChitietSp" class="control-label"></label>
                <input asp-for="ChitietSp" class="form-control" />
                <span asp-validation-for="ChitietSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaDm" class="control-label"></label>
                <select asp-for="MaDm" class="form-control" asp-items="ViewBag.MaDm"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongMua" class="control-label"></label>
                <input asp-for="SoLuongMua" class="form-control" />
                <span asp-validation-for="SoLuongMua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoBinhLuan" class="control-label"></label>
                <input asp-for="SoBinhLuan" class="form-control" type="number" />
                <span asp-validation-for="SoBinhLuan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Congdung" class="control-label"></label>
                <input asp-for="Congdung" class="form-control" />
                <span asp-validation-for="Congdung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cachdung" class="control-label"></label>
                <input asp-for="Cachdung" class="form-control" />
                <span asp-validation-for="Cachdung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Doituongsudung" class="control-label"></label>
                <input asp-for="Doituongsudung" class="form-control" />
                <span asp-validation-for="Doituongsudung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tacdungphu" class="control-label"></label>
                <input asp-for="Tacdungphu" class="form-control" />
                <span asp-validation-for="Tacdungphu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ngaysanxuat" class="control-label"></label>
                <input asp-for="Ngaysanxuat" class="form-control" type="date" />
                <span asp-validation-for="Ngaysanxuat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Noisanxuat" class="control-label"></label>
                <input asp-for="Noisanxuat" class="form-control" />
                <span asp-validation-for="Noisanxuat" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Hình Ảnh 1:</label>
                <input type="file" name="file1" class="form-control-file" />
            </div>
            <div class="form-group">
                <label>Hình Ảnh 2:</label>
                <input type="file" name="file2" class="form-control-file" />
            </div>
            <div class="form-group">
                <label>Hình Ảnh 3:</label>
                <input type="file" name="file3" class="form-control-file" />
            </div>
            <div class="form-group">
                <label>Hình Ảnh 4:</label>
                <input type="file" name="file4" class="form-control-file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>

</body>
</html>
